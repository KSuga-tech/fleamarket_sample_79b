%h2  新規会員登録
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = render "users/shared/error_messages", resource: resource
  .parentField
    .childField
      .nickname
        = f.label :ユーザー名
        %p.labelRequire 必須
        = f.text_field :nickname, autofocus: true, autocomplete: "nickname", placeholder: "例)フリマの小太郎"
      .email
        = f.label :メールアドレス
        %p.labelRequire 必須
        = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "例)kotaro@furima.com"
      .password
        = f.label :パスワード
        %p.labelRequire 必須
        = f.password_field :password, autocomplete: "new-password", placeholder: "7文字以上の半角英数字"
        
      .password
        = f.label :パスワード（確認用）
        %p.labelRequire 必須
        = f.password_field :password_confirmation, autocomplete: "new-password"
        %br/
      .name
        .family_name
          = f.label :姓
          %p.labelRequire 必須
          = f.text_field :family_name, autofocus: true, autocomplete: "family_name", placeholder: "例)山田"

        .first_name
          = f.label :名
          %p.labelRequire 必須
          = f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: "例)太郎"
      .nameKana
        .family_name_kana
          = f.label :姓（カナ）
          %p.labelRequire 必須
          = f.text_field :family_name_kana, autofocus: true, autocomplete: "family_name_kana", placeholder: "例)タロウ"
        .first_name_kana
          = f.label :名（カナ）
          %p.labelRequire 必須
          = f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", placeholder: "例)ヤマダ"
      .post_code
        = f.label :郵便番号
        %p.labelRequire 必須
        = f.text_field :post_code, autocomplete: 'post_code', placeholder: '例)1234567'
      .prefecture
        = f.label :都道府県
        %p.labelRequire 必須
        = f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :code, :name, { prompt: '選択してください' }
      .city
        = f.label :市区町村
        %p.labelRequire 必須
        = f.text_field :city, autofocus: true, autocomplete: "city", placeholder: "例)渋谷区"
      .house_number
        = f.label :番地
        %p.labelRequire 必須
        = f.text_field :house_number, autofocus: true, autocomplete: "house_number", placeholder: "例)道玄坂２丁目２３−１２"
        %br/
      .building_name
        = f.label :建物名
        %br/
        = f.text_field :building_name, autofocus: true, autocomplete: "building_name", placeholder: "例)フォンティスビル ７F"
      .phone_number
        = f.label :電話番号
        %p.labelRequire 必須
        = f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", placeholder: "例)05012345678"
      .birth_date
        = f.label :生年月日
        %p.labelRequire 必須
        = f.date_select :birth_date, use_month_numbers: true, start_year: 1920, end_year: (Time.now.year - 10), default: Date.new(1995, 10, 12)
  .actions
    = f.submit "Sign up", class: "submit"
    = render "devise/shared/links"
