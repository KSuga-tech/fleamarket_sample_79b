%h2 新規登録
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = render "devise/shared/error_messages", resource: resource
  .field
    = f.label :nickname
    %br/
    = f.email_field :nickname
  .field
    = f.label :email
    %br/
    = f.email_field :email, autofocus: true, autocomplete: "email"
  .field
    = f.label :password
    - if @minimum_password_length
      %em
        (#{@minimum_password_length} characters minimum)
    %br/
    = f.password_field :password, autocomplete: "new-password"
  .field
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation, autocomplete: "new-password"
  .field
    = f.label :first_name
    %br/
    = f.email_field :first_name
  .field
    = f.label :family_name
    %br/
    = f.email_field :family_name
  .field
    = f.label :first_name_kana
    %br/
    = f.email_field :family_name_kana
  .field
    = f.label :post_code
    %br/
    = f.email_field :post_code
  .field
    = f.label :city
    %br/
    = f.email_field :city
  .field
    = f.label :house_number
    %br/
    = f.email_field :house_number
  .field
    = f.label :building_name
    %br/
    = f.email_field :building_name
  .field
    = f.label :phone_number
    %br/
    = f.email_field :phone_number
  .field
    = f.label :birth_date
    %br/
    = f.email_field :birth_date
  .actions
    = f.submit "Sign up"
= render "devise/shared/links"
