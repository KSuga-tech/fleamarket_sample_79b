.headerUnit
  .mainHeader
    %h1.icon
      = link_to image_tag("logo.png", width: '140px', height: '40.55px', alt: "サンプル画像"), root_path
    .searchBox
      = form_with url:root_path do |f|
        = f.text_field :key, class:"searchBox--input", id:"searchInput", placeholder:"キーワードから探す"
        = button_tag type: :submit do
          .searchBox__icon
            = link_to image_tag("icon-search 1.png", width: '100px', height: '30px', alt: "サンプル画像")

    
  .menu
    %ul.listsLeft
      %li.listsLeft__category
        = link_to "カテゴリー", "#"
      %li.listsLeft__category
        = link_to "ブランド", "#"
    %ul.listsRight
      %li.listsRight__category
        = link_to "ログイン", "#"
      %li.listsRight__category
        = link_to "新規会員登録"